{
  "name": "browser-boilerplate",
  "version": "0.0.1",
  "description": "boilerplate for browserify, babel, jade, stylus, testem, mocha, power-assert, eslint, browser-sync project.",
  "main": "dist/bundle.js",
  "scripts": {
    "help": "npm-run-help",
    "test": "testem ci",
    "test:local": "testem",
    "test:build:js": "browserify -t envify -t babelify test/index.test.js -o test/bundle.js -d",
    "build:js": "browserify -t envify -t babelify src/js/index.js -o src/bundle.js -d",
    "watch:js": "watchify -t envify -t babelify src/js/index.js -o src/bundle.js -d -v",
    "release:js": "NODE_ENV=production browserify -t envify -t babelify src/js/index.js | uglifyjs -o dist/bundle.js",
    "build:css": "stylus -u nib src/stylus/index.styl -o src/ -m",
    "watch:css": "stylus -w -u nib src/stylus/index.styl -o src/ -m",
    "release:css": "stylus -u nib src/stylus/index.styl -o dist/ -c ",
    "build:html": "jade -P src/jade/index.jade -O src/jade/data.json -o src/",
    "watch:html": "jade -w -P src/jade/index.jade -O src/jade/data.json -o src/",
    "release:html": "jade src/jade/index.jade -O src/jade/data.json -o dist/",
    "clean": "rimraf dist/ && mkdir dist",
    "build": "npm-run-all -p build:*",
    "watch": "npm-run-all -p watch:*",
    "release": "npm-run-all -s clean -p release:*",
    "server": "browser-sync start --server src",
    "start": "npm-run-all -p watch server"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/all-user/browser-boilerplate.git"
  },
  "keywords": [
    "boilerplate",
    "browserify",
    "babel",
    "jade",
    "stylus",
    "nib",
    "testem",
    "mocha",
    "power-assert",
    "eslint",
    "browser-sync"
  ],
  "author": "Keita Okamoto",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/all-user/browser-boilerplate/issues"
  },
  "homepage": "https://github.com/all-user/browser-boilerplate#readme",
  "devDependencies": {
    "babel-eslint": "^6.0.4",
    "babel-plugin-unassert": "^2.1.0",
    "babel-polyfill": "^6.7.4",
    "babel-preset-es2016": "^6.0.11",
    "babel-preset-power-assert": "^1.0.0",
    "babelify": "^7.3.0",
    "browser-sync": "^2.12.5",
    "browserify": "^13.0.0",
    "envify": "^3.4.0",
    "eslint": "^2.9.0",
    "jade": "^1.11.0",
    "nib": "^1.1.0",
    "npm-run-all": "^1.8.0",
    "npm-run-help": "^1.1.0",
    "phantomjs": "^2.1.7",
    "power-assert": "^1.3.1",
    "rimraf": "^2.5.2",
    "stylus": "^0.54.5",
    "testem": "^1.6.0",
    "uglify-js": "^2.6.2",
    "watchify": "^3.7.0"
  }
}
